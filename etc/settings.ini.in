[server:main]
use = egg:Paste#http
host = 0.0.0.0
port = 8000

[composite:main]
use = egg:Paste#urlmap
/ = home
/favicon.ico = static

/soy = soy_templates
/closure = closure
/media = static

[app:soy_templates]
paste.app_factory = jscomp.soy_wsgi:Resources
url = /soy/
packages = jscomp

[app:static]
use = egg:Paste#static
document_root = ${buildout:directory}/src/jscomp/media

[app:closure]
use = egg:Paste#static
document_root = ${closure-library:location}/closure-library

[app:home]
paste.app_factory = jscomp.app:main
packages = jscomp
